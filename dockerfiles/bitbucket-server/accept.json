{
  "public": [
    {
      "//": "Get broker connection status",
      "method": "GET",
      "path": "/healthcheck"
    }
  ],
  "private": [
    {
      "//": "list the user's projects",
      "method": "GET",
      "path": "/projects",
      "origin": "${BITBUCKET_URL}",
      "auth": {
        "scheme": "bearer",
        "username": "${BITBUCKET_AUTH_TOKEN}"
      }
    },
    {
      "//": "list the user's projects",
      "method": "GET",
      "path": "/projects/*",
      "origin": "${BITBUCKET_URL}",
      "auth": {
        "scheme": "bearer",
        "username": "${BITBUCKET_AUTH_TOKEN}"
      }
    },
    {
      "//": "list the user's repositories",
      "method": "GET",
      "path": "/repositories",
      "origin": "${BITBUCKET_URL}",
      "auth": {
        "scheme": "bearer",
        "username": "${BITBUCKET_AUTH_TOKEN}"
      }
    },
    {
      "//": "list the user's repositories",
      "method": "GET",
      "path": "/repositories/*",
      "origin": "${BITBUCKET_URL}",
      "auth": {
        "scheme": "bearer",
        "username": "${BITBUCKET_AUTH_TOKEN}"
      }
    }
  ]
}